    //PlayEffect(AllPlayers(Team.Team1), PlayEffect.SombraEmpExplosioneffect, Color.Red, Victim().Position(), 3);
    //PlayEffect(AllPlayers(Team.Team2), PlayEffect.SombraEmpExplosioneffect, Color.Red, Victim().Position(), 3);

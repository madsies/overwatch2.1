class tracerCooldowns
{
    public Number blinkMeleeCD = 0;
    public Number recallCD;
    public Number meleeBlinkCD = 0;
    public Number getCD(){
        return blinkMeleeCD;
    }

    public Number getRecallCD(){
        return 12 - (TotalTimeElapsed() - recallCD);
    }

    public Number getCD2(){
        return meleeBlinkCD;
    }


}

